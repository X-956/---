<view class="wrap"><view class="title">你可以询问我任何问题</view><view class="chat-container"><view class="chat-history"><block wx:for="{{chatHistory}}" wx:for-item="msg" wx:for-index="i" wx:key="i"><view class="message"><text class="user">{{"用户："+msg.content}}</text><block wx:if="{{msg.answer}}"><text class="bot">{{"DeepSeek："+msg.answer}}</text></block></view></block></view><view class="input-area"><input class="question-input" type="text" placeholder="输入问题..." data-event-opts="{{[['input',[['__set_model',['','question','$event',[]]]]]]}}" value="{{question}}" bindinput="__e"/><button data-event-opts="{{[['tap',[['sendToDeepSeek',['$event']]]]]}}" class="send-btn" bindtap="__e">发送</button></view></view><view class="page-switch"><button data-event-opts="{{[['tap',[['goToPageOne',['$event']]]]]}}" class="page-btn" bindtap="__e">页面一</button><button data-event-opts="{{[['tap',[['goToPageTwo',['$event']]]]]}}" class="page-btn" bindtap="__e">页面二</button><button data-event-opts="{{[['tap',[['goToPageThree',['$event']]]]]}}" class="page-btn" bindtap="__e">页面三</button></view></view>